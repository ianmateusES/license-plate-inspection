{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@api/*": ["api/*"],
      "@orm/*": ["app/typeorm/*"],
      "@database/*": ["database/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "prettier.config.js",
    "babel.config.js",
    "dist",
    "coverage"
  ]
}